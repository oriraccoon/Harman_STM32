#include "LEDBAR.h"

typedef struct {
	GPIO_TypeDef *GPIOx;
	uint32_t pinNum;
}LEDBAR_TypeDef;

LEDBAR_TypeDef ledBar[8] = {
		{GPIOA, 5},
		{GPIOA, 6},
		{GPIOA, 1},
		{GPIOA, 0},
		{GPIOA, 4},
		{GPIOC, 1},
		{GPIOC, 0},
		{GPIOB, 0}
};

void LEDBAR_Write(uint8_t data)
{
	for (int i = 0; i < sizeof(ledBar); i++) {
		if (!((data & (1<<i)) == 0)) {
			GPIO_WritePin(ledBar[i].GPIOx, ledBar[i].pinNum, PIN_SET);
		}
		else {
			GPIO_WritePin(ledBar[i].GPIOx, ledBar[i].pinNum, PIN_RESET);
		}
	}
}
