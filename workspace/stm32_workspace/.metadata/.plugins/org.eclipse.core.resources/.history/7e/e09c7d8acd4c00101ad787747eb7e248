#include "ap_main.h"

int ap_main(){
	uint8_t data = 1;
	uint8_t led_state;
	uint8_t right_state = 0;
	uint8_t OnOff = 0;
	uint8_t left_state = 0;

	while(1){
		if (Button_GetState(GPIOB, 5) == ACT_PUSHED) right_state ^= 1;
		if (Button_GetState(GPIOB, 3) == ACT_PUSHED) OnOff ^= 1;
		if (Button_GetState(GPIOA, 10) == ACT_PUSHED) left_state ^= 1;

		if (OnOff)
			data = 0x00;
		if (!left_state && right_state)
			data = (data << 1) | (data >> 7);
		else if (left_state && !right_state)
			data = (data >> 1) | (data << 7);
		else
			data = (data << 1) | (data >> 7);


		LedBar_Write(data);
		delay(100);
	}

	return 0;
}

void ap_init(){
	SystemClock_Init();
	LedBar_Init();
	Button_Init(GPIOC, 13);
	Button_Init(GPIOB, 5);
	Button_Init(GPIOB, 3); // on/off
	Button_Init(GPIOA, 10);
}
